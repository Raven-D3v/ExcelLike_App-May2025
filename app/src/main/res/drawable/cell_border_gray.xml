<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <!-- Top border -->
    <item android:top="0dp" android:left="-5dp" android:right="-5dp" android:bottom="-4dp">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#38281C"/>
        </shape>
    </item>
    <!-- Bottom border -->
    <item android:top="-4dp" android:left="-5dp" android:right="-5dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#38281C"/>
        </shape>
    </item>
</layer-list> 