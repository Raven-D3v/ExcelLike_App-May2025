<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ramixpert_bg">

    <!-- Centered login row overlaying the logo -->
    <LinearLayout
        android:id="@+id/login_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent">

        <EditText
            android:id="@+id/username"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:hint="Username"
            android:background="@drawable/section_border"
            android:padding="11dp"
            android:textColor="#FFF"
            android:textColorHint="#CCC"
            android:textSize="13sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/section_border"
            android:padding="11dp"
            android:textColor="#FFF"
            android:textColorHint="#CCC"
            android:textSize="13sp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="Login"
            android:background="@drawable/section_border"
            android:textColor="#FFF"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Contact Info Row at Bottom Left -->
    <LinearLayout
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon1"
                android:contentDescription="Name Icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Franco Bacalando Ortiz"
                android:textColor="#CCC"
                android:textSize="10sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon2"
                android:contentDescription="Email Icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="franco.bacalando.ortiz@gmail.com"
                android:textColor="#CCC"
                android:textSize="10sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon3"
                android:contentDescription="LinkedIn Icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/francobacalandoortiz"
                android:textColor="#CCC"
                android:textSize="10sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout> 