<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ramixpert_bg">

    <!-- Login Row Only, overlayed at the bottom -->
    <LinearLayout
        android:id="@+id/login_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:hint="Username"
            android:background="@drawable/section_border"
            android:padding="12dp"
            android:textColor="#FFF"
            android:textColorHint="#CCC"
            android:textSize="18sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/section_border"
            android:padding="12dp"
            android:textColor="#FFF"
            android:textColorHint="#CCC"
            android:textSize="18sp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Login"
            android:background="@drawable/section_border"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Contact Icons Row -->
    <LinearLayout
        android:id="@+id/contact_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon1"
            android:contentDescription="Name Icon"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon2"
            android:layout_marginStart="12dp"
            android:contentDescription="Email Icon"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon3"
            android:layout_marginStart="12dp"
            android:contentDescription="LinkedIn Icon"/>
    </LinearLayout>
</RelativeLayout> 