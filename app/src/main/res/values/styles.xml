<resources>


    <!-- Header Cell Style -->
    <style name="CellHeader">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#444444</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Regular Text Cell -->
    <style name="CellText">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#2C2C2C</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Blue Numeric Data Cell -->
    <style name="CellBlue">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#1E90FF</item>
        <item name="android:background">#2C2C2C</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Yellow Formula Cell -->
    <style name="CellFormula">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:background">#2C2C2C</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CellBox">
        <item name="android:textColor">#FFD700</item>
        <item name="android:background">#2C2C2C</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HeaderCell">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#D3D3D3</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CellInput">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LabelCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputCell">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="CellLimestone">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CellShale">
        <item name="android:background">#D2B48C</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CellIron">
        <item name="android:background">#C0C0C0</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
